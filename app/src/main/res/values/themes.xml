    <!-- Toolbar Style -->
    <style name="DrKisan.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextColor">@color/text_white</item>
        <item name="subtitleTextColor">@color/text_white</item>
        <item name="android:background">@color/primary_green</item>
        <item name="navigationIconTint">@color/text_white</item>
    </style>

    <!-- ActionBar Style -->
    <style name="DrKisan.ActionBar" parent="ThemeOverlay.Material3.ActionBar">
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorOnPrimary">@color/text_white</item>
    </style>

    <!-- Text Appearances -->
    <style name="DrKisan.TextAppearance" parent="TextAppearance.Material3.DisplayLarge">
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="DrKisan.TextAppearance.Headline1" parent="TextAppearance.Material3.DisplayLarge">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="DrKisan.TextAppearance.Headline6" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="DrKisan.TextAppearance.Subtitle1" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="DrKisan.TextAppearance.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Button Styles -->
    <style name="DrKisan.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary_green</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="DrKisan.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/primary_green</item>
        <item name="android:textColor">@color/primary_green</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="DrKisan.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/primary_green</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Card Style -->
    <style name="DrKisan.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <!-- Dialog Styles -->
    <style name="DrKisan.AlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorSurface">@color/surface</item>
    </style>

    <style name="DrKisan.BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorSurface">@color/surface</item>
    </style>

</resources>
